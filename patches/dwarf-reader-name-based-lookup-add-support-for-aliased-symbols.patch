 			if (it != var_syms().end())
 			  {
-			    symbol = it->second[0];
+			    symbol = it->second[0]->get_main_symbol();
 			    for (I = var_addr_sym_map().begin(),
 				E = var_addr_sym_map().end();
 				 I != E; ++I)
 			      {
-				if (I->second->get_name() == name)
+				if (I->second->get_name() == symbol->get_name())
