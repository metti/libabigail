cc_defaults {
    name: "libabigail_defaults",
    cflags: [
        "-DABIGAIL_ROOT_SYSTEM_LIBDIR=\"lib\"",
        "-fexceptions",
        "-Wno-overloaded-virtual",
        "-Wno-implicit-fallthrough",
    ],

    local_include_dirs: [
        "src",
        "include",
    ],

    static_libs: [
        "libelf",
        "libdw",
        "libxml2",
        "libz",
        "libicuuc",
        "libicuuc_stubdata",
    ],

    visibility: [
        "//visibility:private",
    ],
}

cc_library_host_static {
    name: "libabigail",
    defaults: ["libabigail_defaults"],
    srcs: [
        "src/*.cc",
    ],
    exclude_srcs: [
        "src/abg-viz-*",
    ],
}

cc_binary_host {
    name: "abidiff",
    defaults: ["libabigail_defaults"],
    srcs: [
        "tools/abidiff.cc",
    ],
    static_libs: [
        "libabigail",
    ],
}

cc_binary_host {
    name: "abidw",
    defaults: ["libabigail_defaults"],
    srcs: [
        "tools/abidiff.cc",
    ],
    static_libs: [
        "libabigail",
    ],
}

